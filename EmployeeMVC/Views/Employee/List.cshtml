@model List<Employee.Models.DataModels.BaseEmployee>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список</h2>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <table>
        <tr>
            <td><p></p></td>
        </tr>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <p>@employee.FirstName</p>
                    <p>@employee.LastName</p>
                    <p>@employee.Title</p>
                    @Html.ActionLink("Редактировать","Update",routeValues: new { id = employee.Id})
                    @Html.ActionLink("Удалить", "Delete", routeValues: new { id = employee.Id })
                </td>
            </tr>
        }
      
    </table>
    <div>
        @Html.ActionLink("Добавить", "Add", "Employee")
    </div>
</body>
</html>